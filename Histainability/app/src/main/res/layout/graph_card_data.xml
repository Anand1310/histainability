<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clEventCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"
        android:paddingRight="30dp"
        android:paddingBottom="10dp"
        android:background="@color/colorGraphCardBackground"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="10dp">

        <TextView
            android:id="@+id/txvEventTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGraphTitleBackground"
            android:textColor="@color/colorGraphTitleText"
            android:gravity="center_horizontal"
            android:textStyle="bold"
            android:paddingLeft="2dp"
            android:paddingTop="0dp"
            android:paddingRight="2dp"
            android:text="Title"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txvEventDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorGraphDescriptionBackground"
            android:textColor="@color/colorGraphDescriptionText"
            android:padding="14dp"
            android:text="Description - large t xtss" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>